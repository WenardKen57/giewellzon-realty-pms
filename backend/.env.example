# Server
PORT=5000

# CORS
# For production on Render, set CORS_ALLOW_ALL=false and enumerate your frontend origin(s)
CORS_ALLOW_ALL=false
CORS_ORIGINS=https://your-frontend.onrender.com,http://localhost:5173

# MongoDB (Atlas recommended)
# Example Atlas URI (replace user, pass, cluster, and db name)
# MONGODB_URI=mongodb+srv://dbuser:StrongPass@cluster0.xxxxx.mongodb.net/giewellzon_prod?retryWrites=true&w=majority
MONGODB_URI=

# JWT
JWT_ACCESS_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# OTP
OTP_LENGTH=6
OTP_EXP_MINUTES=10
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_MAX_ATTEMPTS=5

# Password reset
PASSWORD_RESET_EXP_MINUTES=30

# Email (leave blank to log to console)
MAIL_HOST=
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=
MAIL_FROM="Giewellzon Realty <no-reply@giewellzon.com>"
NOTIFY_ADMIN_EMAIL=

# App base URL for password reset links (frontend)
BASE_URL=https://your-frontend.onrender.com

# Uploads (Cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Optional: folder name to group assets
CLOUDINARY_UPLOAD_FOLDER=giewellzon

# Upload constraints
ALLOWED_IMAGE_MIME=image/jpeg,image/png,image/webp
ALLOWED_SITEMAP_MIME=image/jpeg,image/png,image/webp,application/pdf
MAX_UPLOAD_SIZE_MB=10

# Registration allowlist
ALLOWED_ADMIN_EMAILS=

# Admin-approval OTP flow
APPROVER_EMAILS=owner@example.com
SEND_OTP_TO_ADMIN_ONLY=true